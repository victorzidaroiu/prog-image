{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "outDir": "./built",
    "declaration": true,
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "pretty": true,
    "strict": false
  },
  "include": ["./src/**/*", "__test__"]
}
